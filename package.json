{
    "$schema": "https://schemastore.org/package.json",
    "name": "ustatus",
    "version": "0.0.1",
    "description": "Dead simple website for uptime monitoring",
    "scripts": {
        "build:fe": "tsc && vite build",
        "watch:fe": "find src | entr npm run build:fe",
        "start:be": "bun src/server.ts",
        "start": "npm run build:fe && npm run start:be"
    },
    "type": "module",
    "license": "MIT",
    "packageManager": "pnpm@9.4.0",
    "devDependencies": {
        "@types/node": "24.5.2",
        "typescript": "5.9.2",
        "vite": "7.1.6",
        "vite-plugin-solid": "2.11.8",
        "bun": "1.3.3"
    },
    "dependencies": {
        "solid-js": "1.9.9",
        "sqlite": "5.1.1",
        "sqlite3": "5.1.7",
        "date-fns": "4.1.0"
    }
}
